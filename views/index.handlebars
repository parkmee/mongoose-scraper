<div class="navbar-fixed">
  <nav>
    <div class="nav-wrapper blue-grey">
      <a href="/" class="brand-logo">
        <img src="./public/images/mongoose.png" class="logo-art"></img>
        Mongoose
      </a>
      <ul id="nav-mobile" class="right hide-on-small-only">
        <li><a href="/" title="home"><i class="fas fa-home"></i></a></li>
        <li><a class="scrape-btn" title="Scrape new articles"><i class="fas fa-search-plus"></i></a></li>
        <li><a href="saved" title="Saved articles"><i class="fas fa-bookmark"></i></a></li>
        <li><a class="delete-all-btn" title="Delete all"><i class="fas fa-trash-alt"></i></a></li>
      </ul>
    </div>
  </nav>
</div>

<div class="fluid-container">
  <div id="wrapper">
      <div id="articles">
        <div class="row m-2">

        {{#each articles}}
          {{#if saved}}
            {{> saved-view}}
          {{else}}
            {{> general-view}}
          {{/if}}
        {{/each}}
        </div>
      </div>
      <div id="notes"></div>
    </div>
</div>

