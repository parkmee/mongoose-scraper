<div class="col">
  <div class="card article-card blue-grey darken-1">
    <div class="card-content white-text">
      <a class="btn-floating top-right close-btn" data-id={{_id}}><i class="material-icons">close</i></a>
      <span class="card-title">{{title}}</span>
      <p>{{moment timestamp "LLL"}}</p>
    </div>
    <div class="card-action">
      <a href={{link}} target="_blank">LINK</a>
      <a href="#" id="add-comment-link" data-id={{_id}}>COMMENT</a>
    </div>
  </div>
</div>